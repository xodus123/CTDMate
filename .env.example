# ======================
# 필수 설정
# ======================

# Upstage API Key (필수)
UPSTAGE_API_KEY=your_upstage_api_key_here

# 로깅 레벨
LOG_LEVEL=INFO

# ======================
# Llama 모델 설정 (ReAct 에이전트용)
# ======================

# Llama 모델 파일 경로
LLAMA_MODEL_PATH=/path/to/llama-3.2-3B-instruct.gguf

# 컨텍스트 윈도우 크기
LLAMA_CTX=4096

# CPU 스레드 수 (시스템에 맞게 조정)
LLAMA_THREADS=8

# 최대 토큰 수
LLAMA_MAX_TOKENS=800

# ======================
# Upstage API 설정
# ======================

# Solar 모델 이름
UPSTAGE_GEN_MODEL=solar-pro2

# 문서 분할 방식
UPSTAGE_SPLIT=page

# 출력 형식
UPSTAGE_OUTPUT_FORMAT=pdf

# ======================
# Qdrant 벡터 DB 설정
# ======================

# Qdrant 서버 URL
QDRANT_URL=http://localhost:6333

# Qdrant API Key (선택)
QDRANT_API_KEY=

# 컬렉션 이름
QDRANT_COLLECTION=ctd

# Qdrant 저장소 경로
QDRANT_PATH=./qdrant_storage

# ======================
# RAG 설정
# ======================

# 검색 결과 개수
RAG_TOP_K=3

# 유사도 임계값 (0.0 ~ 1.0)
RAG_SIM_THRESHOLD=0.78

# ======================
# 파일 업로드 설정
# ======================

# 최대 업로드 파일 수
MAX_FILES=5

# 출력 디렉토리
OUTPUT_DIR=./output
